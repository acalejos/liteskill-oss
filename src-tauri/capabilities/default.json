{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main application window",
  "windows": ["main"],
  "remote": {
    "urls": ["http://localhost:*"]
  },
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "desktop",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "desktop",
          "sidecar": true
        }
      ]
    },
    "shell:default"
  ]
}
